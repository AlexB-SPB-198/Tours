<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    tools:context=".ui.registration.RegistrFragment">

    <TextView
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="24dp"
        android:text="Регистрация"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/corner_radius"
        android:hint="Имя"
        android:paddingStart="10dp"
        android:textSize="12sp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_female"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="134dp"
        android:background="@drawable/corner_radius"
        android:hint="Фамилия"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/et_mail"
        android:layout_width="198dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="184dp"
        android:background="@drawable/corner_radius"
        android:hint="Почта"
        android:inputType="textEmailAddress"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_pass"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="234dp"
        android:background="@drawable/corner_radius"
        android:hint="Введите пароль"
        android:inputType="numberPassword"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_repeat_pass"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="270dp"
        android:background="@drawable/corner_radius"
        android:hint="Повторите пароль"
        android:inputType="numberPassword"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_data"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="320dp"
        android:background="@drawable/corner_radius"
        android:focusableInTouchMode="false"
        android:hint="Дата рождения"
        android:inputType="date"
        android:textSize="12sp"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/et_number"
        android:layout_width="140dp"
        android:layout_height="30dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="430dp"
        android:background="@drawable/corner_radius"
        android:hint="+996"
        android:inputType="phone"
        android:paddingStart="10dp"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:id="@+id/cb_check"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="500dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

    <TextView
        android:id="@+id/et_politic"
        android:layout_width="216dp"
        android:layout_height="56dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="490dp"
        android:linksClickable="true"
        android:text="Creating an account means you’re okay with
         our Terms of Service, Privacy Policy, and our
                    default Notification Settings."
        android:textSize="10sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_account"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginStart="122dp"
        android:layout_marginTop="570dp"
        android:layout_marginEnd="118dp"
        android:backgroundTint="@color/orange"
        android:text="Создать аккаунт"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="9sp"
        app:cornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/mcv_google"
        android:layout_width="204dp"
        android:layout_height="34dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintEnd_toEndOf="@+id/btn_account"
        app:layout_constraintStart_toStartOf="@+id/btn_account"
        app:layout_constraintTop_toBottomOf="@id/btn_account">

        <ImageView
            android:id="@+id/iv_google"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_marginStart="3dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="@drawable/radius_google"
            android:src="@drawable/google_logo" />

        <TextView
            android:id="@+id/tv_google"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:lines="2"
            android:paddingStart="40dp"
            android:paddingTop="8dp"
            android:paddingEnd="30dp"
            android:text="Зарегистрироваться с помощью Google"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="8sp" />


    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>